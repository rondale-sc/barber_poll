%form
  %fieldset.left
    %h2 Create Your Poll
    %ul
      %li
        %label(for="question")
        %textarea#survey_question(name="question" class='autosize' placeholder="Ask your question here!")
      #ul#answers
      %li
        %label(class="topcoat-checkbox" for="permissiveVoting")
          %input(type="checkbox" id="permissiveVoting")
            %div(class="topcoat-checkbox__checkmark" type="checkbox")
          Allow Voting From Same IP?

      %div.actions
        %a.submit(href="#") Create Survey
